{
  "manifest_version": 3,
  "name": "リアルタイム音声文字起こし",
  "version": "1.0.0",
  "description": "Webページのタブ音声をリアルタイムで文字起こし・翻訳します",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "文字起こしパネルを開く"
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "permissions": [
    "sidePanel",
    "tabCapture",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "options_page": "settings/settings.html",
  "web_accessible_resources": [
    {
      "resources": ["sidepanel/js/audio-processor.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
